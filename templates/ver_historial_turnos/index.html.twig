{% extends 'base.html.twig' %}

{% block title %}Hello VerHistorialTurnosController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Historial de Turnos</h1>
		<h3>de
			{{nombre_paciente}}</h3>


		<div class="container-fluid">

			<table class=" table">
				{% if turnos != null %}
					<tr>
						<th>
							Vacuna
						</th>
						<th>
							Fecha
						</th>
						<th>
							Vacunatorio
						</th>
						<th>
							Estado
						</th>
					</tr>

					{% for turno in turnos %}
						<tr>
							<td>{{ turno.vacuna }}</td>
							<td>{{ turno.fecha }}</td>
							<td>{{ turno.vacunatorio }}</td>
							<td>{{ turno.estado }}</td>

						</tr>
					{% endfor %}


				{% else %}
					<tr>
						<td>Ud. no tiene turnos en su historial.
						</td>
					</tr>
				{% endif %}


			</table>
		</div>

	</div>
{% endblock %}
