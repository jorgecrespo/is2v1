{% extends 'base.html.twig' %}

{% block title %}Hello HomeadminController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">

		<div class="example-wrapper">
			<h1>Home Admin</h1>

			<p>
				Pagina en construccion
			</p>

			<ul>
				<li><a href="/altavacunador">Alta de Vacunador</a></li>
				<li><a href="/vacunadoresporcentro">Administrar Vacunadores por Centro</a></li>
			</ul>
		</div>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}

	</div>
{% endblock %}
