{% extends 'base.html.twig' %}

{% block title %}Registro de Paciente
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		#paciente div {
			/* background-color: yellow; */
			padding: 3px
		}

		#paciente_fecha_nac {}
		#paciente_fecha_nac select {
			margin: 3px
		}

		#paciente_fecha_nac {
			display: inline;
		}
	</style>
	<script>

		$('#paciente_fecha_nac_month').addClass('form-control');
		$('#paciente_fecha_nac_month').addClass('input-inline');
	</script>
</div>
<div class="container">

	<div class="example-wrapper">
		<h1>Registro de Paciente
		</h1>


		{{ form (formulario, {
    attr: {
        class: 'form-group',
		'novalidate': 'novalidate'
    }
})}}
		</div>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}


	</div>
</div>{% endblock %}
