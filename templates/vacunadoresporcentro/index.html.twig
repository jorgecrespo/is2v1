{% extends 'base.html.twig' %}

{% block title %}Hello VacunadoresporcentroController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}

		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<h1>Hello
		{{ controller_name }}! </h1>


	{{ form (form, {'attr': {'id': 'form_vacunador'}})}}

		<div class="example-wrapper">

			<table>
				<tr>
					<th>
						nombre
					</th>
					<th>
						mail
					</th>
					<th>
						Vacunatorio
					</th>
					<th>
						operacion
					</th>
					<th>
						Fecha baja
					</th>
				</tr>
				{% if checks["V1"] == true %}
					<tr>
						<td>Vacunatorio 1</td>
					</tr>

					{% for vacunador in vacunadores1 %}
						<tr>
							<td>{{ vacunador.nombre }}</td>
							<td>{{ vacunador.mail }}</td>
							<td>
								Vacunatorio X</td>
							<td>
								<a href="#">Baja</a>
								<a href="#">Modificar</a>
							</td>

						</tr>
					{% endfor %}
				{% endif %}
				{% if checks["V2"] == true %}
					<tr>
						<td>Vacunatorio 2</td>
					</tr>
					{% for vacunador in vacunadores2 %}
						<tr>
							<td>{{ vacunador.nombre }}</td>
							<td>{{ vacunador.mail }}</td>
							<td>
								Vacunatorio X</td>
							<td>
								<a href="#">Baja</a>
								<a href="#">Modificar</a>
							</td>
							<td>
								fecha {{ vacunador.fecha_baja }}
							</td>

						</tr>
					{% endfor %}
				{% endif %}
				{% if checks["V3"] == true %}
					<tr>
						<td>Vacunatorio 3</td>
					</tr>

					{% for vacunador in vacunadores3 %}
						<tr>
							<td>{{ vacunador.nombre }}</td>
							<td>{{ vacunador.mail }}</td>
							<td>
								Vacunatorio X</td>
							<td>
								<a href="#" onclick="bajaVacunador('{{vacunador.mail}}')">Baja</a>
								<a href="#"onclick="modificarVacunador('{{vacunador.mail}}')">Modificar</a>
							</td>
														<td>
								{{ vacunador.fecha_baja }}
							</td>

						</tr>
					{% endfor %}
				{% endif %}

			</table>
		</div>

		

	{% endblock %}
